                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                <div class="row" style="display: flex; align-items: center;">
                                    <div class="col-sm-2"></div>
                                    <div class="col-sm-2">
                                        <p style="margin: 0;">{{ cdek_auth__status }}
                                            : {% if cdek_official_auth__test_mode %} {{ cdek_auth__test_mode_label }} {% elseif status_auth %} {{ cdek_auth__status_connected }} {% else %} {{ cdek_auth__status_unconnected }} {% endif %}</p>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="row" style="display: flex; align-items: center;">
                                            <input type="checkbox"
                                                   name="cdek_official_auth__test_mode"
                                                   id="cdek_official_auth__test_mode"
                                                   value="on"
